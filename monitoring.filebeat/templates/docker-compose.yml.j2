version: "3.7"

services:
  filebeat:
    container_name: filebeat
    image: "{{ filebeat__image }}"
    user: root
    volumes:
      - /var/lib/docker:/var/lib/docker:ro
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - ./filebeat.yml:/usr/share/filebeat/filebeat.yml:ro
    restart: unless-stopped
    logging:
      driver: json-file
      options:
        max-file: "1"
        max-size: "50m"
